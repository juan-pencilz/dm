<link rel="stylesheet" href="{{ 'arrow-spacer.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-rich-text.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'arrow-spacer.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}




<div class="arrow-wrapper">
  <div class="arrow erd">
    <div class="la-qaa arrow-position-{{ section.settings.arrow_position }">
    </div>
  </div>
</div>



{% schema %}
{
  "name": "Arrow",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "arrow_position",
      "options": [
        {
          "value": "right",
          "label": "Arrow Right"
        },
        {
          "value": "left",
          "label": "Arrow Left"
        },
        {
          "value": "center",
          "label": "Arrow Center"
        }
      ],
      "default": "left",
      "label": "Arrow Position",
      "info": "Choose the position of the arrow between sections"
    },
    {
      "type": "select",
      "id": "arrow_orientation",
      "options": [
        {
          "value": "point-right",
          "label": "Orientation Right"
        },
        {
          "value": "point-left",
          "label": "Orientation Left"
        }
      ],
      "default": "point-left",
      "label": "Arrow Orientation",
      "info": "Choose the orientation of the arrow between sections"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],

  "presets": [
    {
      "name": "Arrow Spacer"
    }
  ]
}
{% endschema %}
