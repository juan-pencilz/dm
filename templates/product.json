{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "dropdown"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true
          }
        }
      },
      "block_order": [
        "title",
        "price",
        "caption",
        "description",
        "variant_picker",
        "buy_buttons"
      ],
      "settings": {
        "enable_sticky_info": false,
        "media_size": "small",
        "constrain_to_viewport": false,
        "media_fit": "contain",
        "gallery_layout": "thumbnail",
        "media_position": "left",
        "image_zoom": "hover",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 60,
        "padding_bottom": 40
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "You might also like",
        "heading_size": "h2",
        "products_to_show": 3,
        "columns_desktop": 3,
        "color_scheme": "background-1",
        "image_ratio": "adapt",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 40,
        "padding_bottom": 28
      }
    }
  },
  "order": [
    "main",
    "related-products"
  ]
}
